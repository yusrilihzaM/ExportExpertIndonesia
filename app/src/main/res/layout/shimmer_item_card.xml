<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    app:cardCornerRadius="@dimen/m_16"

    android:layout_marginLeft="@dimen/m_4"
    android:layout_marginRight="@dimen/m_4"
    android:layout_marginBottom="@dimen/m_8"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="@dimen/m_8"
            app:cardCornerRadius="@dimen/m_16">
            <ImageView
                android:id="@+id/imgNews"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@color/shimmer_color"
                android:scaleType="fitXY"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titleNews"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:textSize="14sp"
                android:layout_marginLeft="@dimen/m_4"
                android:layout_marginTop="@dimen/m_12"
                android:layout_marginRight="@dimen/m_8"
                android:background="@color/shimmer_color"
                app:layout_constraintStart_toEndOf="@+id/imgNews"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/m_4"
                android:layout_marginRight="@dimen/m_16"
                android:layout_marginTop="@dimen/m_4"
                android:fontFamily="@font/poppins_light"
                android:background="@color/shimmer_color"
                android:textColor="@color/black"
                app:autoSizeTextType="uniform"
                android:textSize="10sp"
                app:autoSizeStepGranularity="2sp"
                app:layout_constraintStart_toEndOf="@+id/imgNews"
                app:layout_constraintTop_toBottomOf="@+id/titleNews" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/m_4"
                android:layout_marginRight="@dimen/m_16"
                android:layout_marginTop="@dimen/m_4"
                android:fontFamily="@font/poppins_light"
                android:background="@color/shimmer_color"
                android:textSize="10sp"
                android:textColor="@color/black"
                app:autoSizeTextType="uniform"
                app:autoSizeStepGranularity="2sp"
                app:layout_constraintStart_toEndOf="@+id/imgNews"
                app:layout_constraintTop_toBottomOf="@+id/titleNews" />
            <TextView
                android:id="@+id/dateNews"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_light"
                android:layout_marginLeft="@dimen/m_4"
                android:layout_marginTop="@dimen/m_4"
                android:layout_marginRight="@dimen/m_8"
                android:background="@color/shimmer_color"
                android:textSize="10sp"
                app:layout_constraintStart_toEndOf="@+id/imgNews"
                app:layout_constraintTop_toBottomOf="@+id/contentNews" />




        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>