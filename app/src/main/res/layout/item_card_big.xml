<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    app:cardCornerRadius="@dimen/m_8"
    android:id="@+id/card"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_marginLeft="@dimen/m_4"
    android:layout_marginRight="@dimen/m_4"
    android:layout_marginBottom="@dimen/m_12"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/m_8"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/imgNews"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:background="@color/shimmer_color"
            android:scaleType="fitXY"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/dateNews"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_light"
            android:layout_marginLeft="@dimen/m_16"
            android:layout_marginTop="@dimen/m_4"
            android:layout_marginRight="@dimen/m_16"
            android:text="Senin, 12 Juni 2021"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/imgNews"
            app:layout_constraintTop_toBottomOf="@+id/contentNews" />
            <TextView
                android:id="@+id/titleNews"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:textSize="14sp"
                android:layout_weight="1"
                app:autoSizeTextType="uniform"
                app:autoSizeMinTextSize="12sp"
                app:autoSizeMaxTextSize="14sp"
                app:autoSizeStepGranularity="2sp"
                android:layout_marginLeft="@dimen/m_16"
                android:layout_marginRight="@dimen/m_16"
                android:text="Export Expert Talk #15"
                android:textColor="@color/black"
                app:layout_constraintStart_toEndOf="@+id/imgNews"
                app:layout_constraintTop_toTopOf="parent" />



    </LinearLayout>
</androidx.cardview.widget.CardView>