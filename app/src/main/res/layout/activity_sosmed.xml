<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_settings"
    tools:context=".ui.admin.settingapp.fragment.sosmed.SosmedActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="@dimen/m_16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/deskripsiAplikasi">
        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:textSize="16sp"
            android:gravity="center"
            android:text="@string/sosial_media"/>
        <LinearLayout
            android:clickable="true"
            android:id="@+id/btnWA"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:padding="@dimen/m_8"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/m_12"
            android:orientation="horizontal">
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/imgWa"
                android:scaleType="centerCrop"
                android:layout_width="35dp"
                android:src="@drawable/whatsapp"
                android:layout_height="35dp"/>
            <TextView
                android:id="@+id/tvWa"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:fontFamily="@font/poppins"
                android:textColor="@color/black"
                android:layout_marginLeft="@dimen/m_16"
                android:layout_marginRight="@dimen/m_16"
                android:layout_gravity="center"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_width="30dp"
                android:src="@drawable/ic_baseline_chevron_right_24"
                android:layout_height="50dp"/>
        </LinearLayout>
        <LinearLayout
            android:clickable="true"
            android:id="@+id/btnTelegram"
            android:layout_marginBottom="@dimen/m_12"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:padding="@dimen/m_8"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/imgTelegram"
                android:scaleType="centerCrop"
                android:layout_width="35dp"
                android:src="@drawable/telegram"
                android:layout_height="35dp"/>
            <TextView
                android:id="@+id/tvTelegram"
                android:layout_width="match_parent"
                android:gravity="center"
                android:fontFamily="@font/poppins"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/m_16"
                android:layout_marginRight="@dimen/m_16"
                android:layout_gravity="center"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_width="30dp"
                android:src="@drawable/ic_baseline_chevron_right_24"
                android:layout_height="50dp"/>
        </LinearLayout>
        <LinearLayout
            android:clickable="true"
            android:id="@+id/btnig"
            android:layout_marginBottom="@dimen/m_12"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:padding="@dimen/m_8"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/imgig"
                android:scaleType="centerCrop"
                android:layout_width="35dp"
                android:src="@drawable/instagram"
                android:layout_height="35dp"/>
            <TextView
                android:id="@+id/tvig"
                android:layout_width="match_parent"
                android:gravity="center"
                android:fontFamily="@font/poppins"
                android:textColor="@color/black"
                android:layout_marginLeft="@dimen/m_16"
                android:layout_marginRight="@dimen/m_16"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_width="30dp"
                android:src="@drawable/ic_baseline_chevron_right_24"
                android:layout_height="50dp"/>
        </LinearLayout>
        <LinearLayout
            android:clickable="true"
            android:id="@+id/btntiktok"
            android:layout_marginBottom="@dimen/m_12"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:padding="@dimen/m_8"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/imgtiktok"
                android:scaleType="centerCrop"
                android:layout_width="35dp"
                android:src="@drawable/tiktok"
                android:layout_height="35dp"/>
            <TextView
                android:id="@+id/tvtiktok"
                android:layout_width="match_parent"
                android:gravity="center"
                android:fontFamily="@font/poppins"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/m_16"
                android:layout_marginRight="@dimen/m_16"
                android:layout_gravity="center"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_width="30dp"
                android:src="@drawable/ic_baseline_chevron_right_24"
                android:layout_height="50dp"/>
        </LinearLayout>
        <LinearLayout
            android:clickable="true"
            android:id="@+id/btnfacebook"
            android:layout_marginBottom="@dimen/m_12"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:padding="@dimen/m_8"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/imgfacebook"
                android:scaleType="centerCrop"
                android:layout_width="35dp"
                android:src="@drawable/facebook"
                android:layout_height="35dp"/>
            <TextView
                android:id="@+id/tvfacebook"
                android:layout_width="match_parent"
                android:gravity="center"
                android:fontFamily="@font/poppins"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/m_16"
                android:layout_marginRight="@dimen/m_16"
                android:layout_gravity="center"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_width="30dp"
                android:src="@drawable/ic_baseline_chevron_right_24"
                android:layout_height="50dp"/>
        </LinearLayout>
        <LinearLayout
            android:clickable="true"
            android:id="@+id/btnlinkedn"
            android:layout_marginBottom="@dimen/m_12"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:padding="@dimen/m_8"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/imglinkedn"
                android:scaleType="centerCrop"
                android:layout_width="35dp"
                android:src="@drawable/linkedin"
                android:layout_height="35dp"/>
            <TextView
                android:id="@+id/tvlinkedn"
                android:layout_width="match_parent"
                android:gravity="center"
                android:fontFamily="@font/poppins"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/m_16"
                android:layout_marginRight="@dimen/m_16"
                android:layout_gravity="center"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_width="30dp"
                android:src="@drawable/ic_baseline_chevron_right_24"
                android:layout_height="50dp"/>
        </LinearLayout>
        <LinearLayout
            android:clickable="true"
            android:id="@+id/btnemail"
            android:layout_marginBottom="@dimen/m_12"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:padding="@dimen/m_8"

            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imgemail"
                android:scaleType="centerCrop"
                android:layout_width="35dp"
                android:layout_gravity="center"
                android:src="@drawable/gmail"
                android:layout_height="35dp"/>
            <TextView
                android:id="@+id/tvemail"
                android:layout_width="match_parent"
                android:gravity="center"
                android:fontFamily="@font/poppins"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/m_16"
                android:layout_marginRight="@dimen/m_16"
                android:layout_gravity="center"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_width="30dp"
                android:src="@drawable/ic_baseline_chevron_right_24"
                android:layout_height="50dp"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>